{
  "name": "adhoc",
  "version": "0.1.0",
  "author": "John-Kim Murphy <john@leftium.com> http://www.leftium.com",
  "description": "Start a web server in that directory. This instant! (like python -m SimpleHTTPServer on steroids)",
  "main": "./lib/adhoc",
  "repository": {
    "type": "git",
    "url": "git://github.com/leftium/adhoc"
  },
  "keywords": [
    "cli",
    "command",
    "server",
    "web",
    "directory",
    "livereload",
    "SimpleHTTPServer",
    "HTTP"
  ],
  "scripts": {
    "start": "node ./bin/adhoc",
    "test": "vows --spec --isolate"
  },
  "dependencies": {
    "colors": "*",
    "union": "*",
    "portfinder": "*",
    "node-getopt": "*",
    "openurl": "*",
    "bytes": "*",
    "pause": "*",
    "send": "*",
    "crypto": "*",
    "better-livereload": "~0.3.1",
    "connect-livereload": "~0.2.0",
    "longjohn": "*"
  },
  "devDependencies": {
    "vows": "0.6.x",
    "request": "2.9.x"
  },
  "bugs": {
    "url": "https://github.com/leftium/adhoc/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/leftium/adhoc/raw/master/LICENSE"
    }
  ],
  "analyze": false,
  "preferGlobal": "true",
  "bin": {
    "adhoc": "./bin/adhoc"
  }
}
